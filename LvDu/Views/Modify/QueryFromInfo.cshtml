
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>updataInfo</title>
</head>
<body>

    @{

        List<LvDu.Entity.Info> infoList = ViewBag.infoList;
        String[] titleArray = ViewBag.titleArray;

    }
    <div>

        <div class="pageContent">
            <form method="post" action="/Modify/UpdateInfo" class="pageForm required-validate" onsubmit="return validateCallback(this, navTabAjaxDone);">
                <div class="pageFormContent" layoutH="56">
                    <p>
                        <label style="width:80px">id</label>
                        <input name="id" type="text" size="38" value="@infoList[0].id" readonly="readonly" />
                    </p>
                    <p>
                        <label style="width:80px">位置：</label>
                        <input name="position" class="required" type="text" size="30" value="@infoList[0].position" alt="请输入客户名称" />
                    </p>
                    <p>
                        @* 查找带回  参数：sonlist:查找二级菜单并带回  navList:查找一级菜单并带回 *@
                        <label style="width:80px">上级元素：</label>
                        <input type="hidden" name="orgLookup.id" value="@infoList[0].up_item" />
                        <input type="text" size="36" class="required" name="orgLookup.orgName" value="@infoList[0].up_item" suggestFields="orgNum,orgName" suggestUrl="demo/database/db_lookupSuggest.html" lookupGroup="orgLookup" />
                        <a class="btnLook" href="/FindAndCallBack/Index/@infoList[0].up_item" lookupGroup="orgLookup">查找带回</a>
                    </p>
                    <p>
                        <label style="width:80px">内容：</label>
                        <input type="text" value="@infoList[0].info" name="info" class="textInput">
                    </p>
                    <p>
                        <label style="width:80px">原图片：</label>
                        <input name="img_s" type="text" size="30" alt="格式：/image/1.jpg" value="@infoList[0].img_s" />
                    </p>
                    <p>
                        <label style="width:80px">放大图片：</label>
                        <input name="img_b" type="text" size="30" alt="格式：/image/1.jpg" value="@infoList[0].img_b" />
                    </p>
                    <p>
                        <label style="width:80px">视频：</label>
                        <input name="video" type="text" size="30" alt="格式：/video/1.mp4" value="@infoList[0].video" />
                    </p>
                </div>
                <div class="formBar">
                    <ul>
                        <!--<li><a class="buttonActive" href="javascript:;"><span>保存</span></a></li>-->
                        <li><div class="buttonActive"><div class="buttonContent"><button type="submit">保存</button></div></div></li>
                        <li>
                            <div class="button"><div class="buttonContent"><button type="button" class="close">取消</button></div></div>
                        </li>
                    </ul>
                </div>
            </form>
        </div>

    </div>
</body>
</html>
