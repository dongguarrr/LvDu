
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>updataInfo</title>
</head>
<body>

    @{

        List<LvDu.Entity.Admin> ad = ViewBag.adminList;

    }

    <div>

        <div class="pageContent">
            <form method="post" action="/Admin/UpdateAdmin" class="pageForm required-validate" onsubmit="return validateCallback(this, navTabAjaxDone);">
                <div class="pageFormContent" layoutH="56">
                    <p>
                        <label style="width:80px">昵称</label>
                        <input name="username" type="text" size="38" value="@ad[0].username" readonly="readonly" />
                    </p>
                    <p>
                        <label style="width:80px">密码：</label>
                        <input name="pwd" class="required" type="password" size="30" value="@ad[0].pwd" readonly="readonly"/>
                    </p>
                    <p>
                        <label style="width:80px">新密码：</label>
                        <input name="pwd_new" class="required" type="password" size="30" value="" alt="请输入新密码" />
                    </p>
                    <p>
                        <label style="width:80px">确认新密码：</label>
                        <input name="pwd_confirm" class="required" type="password" size="30" value="" alt="请再次输入密码" />
                    </p>

                </div>
                <div class="formBar">
                    <ul>
                        <!--<li><a class="buttonActive" href="javascript:;"><span>保存</span></a></li>-->
                        <li><div class="buttonActive"><div class="buttonContent"><button type="submit">保存</button></div></div></li>
                        <li>
                            <div class="button"><div class="buttonContent"><button type="button" class="close">取消</button></div></div>
                        </li>
                    </ul>
                </div>
            </form>
        </div>

    </div>
</body>
</html>
